{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build gtests (MSVC)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/build-tests-vscode.ps1"
      ],
      "group": "build",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Build + Run gtests (MSVC)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "scripts/build-tests-vscode.ps1",
        "-RunTests"
      ],
      "group": "test",
      "problemMatcher": [
        "$msCompile"
      ]
    }
  ]
}
